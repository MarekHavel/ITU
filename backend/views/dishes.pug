// Formulář na obědy
#dishesContent.container.mt-3
  .row
    .col
    #dishList.col-6.overflow-auto.border.p-2.rounded-start(style='height: 800px;')
      // Jednotlivé kartičky
      each dish in dishesMenu
        .card.p-3.mb-2
          // Začátek kartičky
          .row
            .col-8
              .mb-3
                label.form-label(for='dishName') Název jídla
                input#dishName.form-control(type='text' list='dishesDatalist' value=dish.name readonly)
              .mb-3
                label.form-label(for='dishAmount') Počet kusů
                input#dishAmount.form-control(type='number' value=dish.count readonly)
            .col-4.text-center
              button.btn.btn-primary.h-75.w-75.mt-3(hx-delete="/webapp/menuItem/" + dish.id hx-swap="delete" hx-target="closest .card.p-3.mb-2")
                // Tlačítko pro odstranění
                svg.bi.bi-trash3-fill(xmlns='http://www.w3.org/2000/svg' width='32' height='32' fill='currentColor' viewBox='0 0 16 16')
                  path(d='M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5')
      .card.p-3.mb-2
        // Přidat jídlo
        .row
          .col-8
            .mb-3
              label.form-label(for='dishName') Název jídla
              input#dishName.form-control(type='text' list='dishesDatalist' placeholder='Např. *backend*')
              datalist#dishesDatalist
                option(value='Jídlo 1')
                option(value='Jídlo 2')
                option(value='Bude doplněno backendem :)')
            .mb-3
              label.form-label(for='dishAmount') Počet kusů
              input#dishAmount.form-control(type='number' min='0' max='1000')
          .col-4.text-center
            button.btn.btn-success.h-75.w-75.mt-3
              // Tlačítko pro odstranění
              svg.bi.bi-plus-circle(xmlns='http://www.w3.org/2000/svg' width='32' height='32' fill='currentColor' viewBox='0 0 16 16')
                path(d='M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16')
                path(d='M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4')
    .col-3.border.border-start-0.p-2.rounded-end(style='height: 800px;')
      .row(style='height: 700px;')
      .row.p-3(style='height: 100px;')
