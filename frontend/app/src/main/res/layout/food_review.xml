<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review food" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/food_review_stars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <ImageView
                android:id="@+id/food_review_star_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/star_outline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/food_review_star_2"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintHeight_default="wrap"/>

            <ImageView
                android:id="@+id/food_review_star_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/star_outline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/food_review_star_1"
                app:layout_constraintRight_toLeftOf="@id/food_review_star_3"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintHeight_default="wrap"/>

            <ImageView
                android:id="@+id/food_review_star_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/star_outline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/food_review_star_2"
                app:layout_constraintRight_toLeftOf="@id/food_review_star_4"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintHeight_default="wrap"/>

            <ImageView
                android:id="@+id/food_review_star_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/star_outline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/food_review_star_3"
                app:layout_constraintRight_toLeftOf="@id/food_review_star_5"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintHeight_default="wrap"/>

            <ImageView
                android:id="@+id/food_review_star_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/star_outline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/food_review_star_4"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_default="wrap"
                app:layout_constraintHeight_default="wrap"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/food_review_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write your review here"/>

    </LinearLayout>

</LinearLayout>